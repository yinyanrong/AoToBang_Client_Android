<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  
    <FrameLayout
        android:id="@+id/search_fram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
       <com.aotobang.app.view.CircleWaveView
           	android:id="@+id/waveview"
            android:layout_width="240dp"
            android:layout_height="240dp"
            />
        <com.aotobang.app.view.CircleImageView
            android:id="@+id/circle_imageview"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_01"
            app:border_color="@color/circle_color"
            app:border_width="2dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_fram"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/search_your_destined"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_large" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/new_experience"
        android:textColor="@color/main_text_gray"
        android:textSize="@dimen/textsize_middle" />

    <TextView
        android:id="@+id/text_begin_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_search_bg"
        android:gravity="center"
        android:text="@string/start_search"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_large" />

    <TextView
        android:id="@+id/single_high"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/main_text_color_red"
        android:textSize="@dimen/textsize_large"
        android:layout_alignParentBottom="true"
        android:text="@string/single_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout><!-- From: file:/E:/android_code/AoToBang_Client_Android/AotoBangNew/src/main/res/layout/fragment_main.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.aotobang.app.view.CircleImageView
        android:id="@+id/message_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@drawable/img_01"
        app:border_color="@color/circle_color"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/message_avatar"
        android:text="hehehe"
        android:textColor="#000"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-6-9"
            android:textColor="#888888"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/unread_msg_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/unread_count_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_little_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
           android:layout_below="@id/name"
         android:layout_toLeftOf="@id/rl_time"
         android:layout_toRightOf="@id/message_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/msg_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/msg_state_fail_resend"
            android:visibility="visible" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         
           
            android:layout_toRightOf="@id/msg_state"
            android:ellipsize="end"
            android:padding="7dp"
            android:singleLine="true"
            android:text="123"
            android:textColor="#888888"
            android:textSize="14sp" />
    </RelativeLayout>
 <View
        android:layout_below="@id/message_avatar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
</RelativeLayout><!-- From: file:/E:/android_code/AoToBang_Client_Android/AotoBangNew/src/main/res/layout/message_list_item.xml -->
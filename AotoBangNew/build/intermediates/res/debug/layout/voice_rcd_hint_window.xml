<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/ll_voice_rcd_hint_rcding"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/voice_rcd_hint_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/microphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/microphone" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/microphone"
                android:layout_toRightOf="@id/microphone"
                android:src="@drawable/amp1" />

            <TextView
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/textsize_middle"
                android:id="@+id/cancle"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/move_up_to_cancel"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voice_rcd_hint_tooshort"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_icon_voice_short" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:text="@string/The_recording_time_is_too_short"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/android_code/AoToBang_Client_Android/AotoBangNew/src/main/res/layout/voice_rcd_hint_window.xml -->
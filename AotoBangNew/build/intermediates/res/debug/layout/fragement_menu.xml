<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_menu_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/main_text_color_red" >

        <com.aotobang.app.view.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_01"
            app:border_color="@color/circle_color"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="我是名字"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_middle" />

        <LinearLayout
            android:id="@+id/ll_sex_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/userinfo_oval_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sex_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/user_man" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="24"
                android:textColor="@color/main_text_color_red"
                android:textSize="@dimen/textsize_little_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_sex_age"
            android:layout_marginTop="10dp"
            android:background="@color/menu_ll_bg"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/hi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_middle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hi_value"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/menu_crown"
                    android:text="@string/hi_value"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_little_small" />
            </RelativeLayout>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/gift_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_middle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gift_value"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/menu_gift"
                    android:text="@string/gift_count"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_little_small" />
            </RelativeLayout>
 			 <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/like_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_middle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/like_value"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/menu_heart"
                    android:text="@string/like_count"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_little_small" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_menu_title"
        android:divider="@null" >
    </ListView>

</RelativeLayout><!-- From: file:/E:/android_code/AoToBang_Client_Android/AotoBangNew/src/main/res/layout/fragement_menu.xml -->
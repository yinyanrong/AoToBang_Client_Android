<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_high__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_title_bg" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_back" />

        <TextView
            android:id="@+id/high_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="自己嗨"
            android:textColor="@color/main_text_color_red"
            android:textSize="@dimen/textsize_large"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/title_line"
        style="@style/grayline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_high__title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/vibrate_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/vibrate_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/lvs_line0" />

            <ImageView
                android:id="@+id/vibrate_subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/subtract" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="震动"
                android:textColor="@color/main_text_gray"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/reversal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reversal" />

            <TextView
                android:id="@+id/reversal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="反转"
                android:textColor="@color/main_text_gray"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                 android:layout_gravity="center_horizontal"
                android:id="@+id/second_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_small" />

            <ImageView
                 android:layout_gravity="center_horizontal"
                android:id="@+id/second_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/lvs_line0" />

            <ImageView
                 android:layout_gravity="center_horizontal"
                android:id="@+id/second_subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_big" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="旋转"
                android:textColor="@color/main_text_gray"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/android_code/AoToBang_Client_Android/AotoBangNew/src/main/res/layout/activity_single_lvs.xml -->
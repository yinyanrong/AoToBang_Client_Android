<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
 <RelativeLayout
        android:id="@+id/rl_high__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_title_bg" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_back" />

        <TextView
            android:id="@+id/high_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="自己嗨"
            android:textColor="@color/main_text_color_red"
            android:textSize="@dimen/textsize_large"
            android:visibility="visible" />
    </RelativeLayout>
    <View
        android:id="@+id/title_line"
        style="@style/grayline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_high__title" />
    <GridView
         android:numColumns="3"
        android:layout_below="@id/title_line"
        android:id="@+id/toy_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </GridView>
</RelativeLayout>